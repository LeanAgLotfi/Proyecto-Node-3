<h1 class="signup-title">Sign up</h1>

<div class="conteiner">
    <form class="" action="/api/session/register" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="">
                <input type="text" class="validate" name="firstName">
                <label for="first_name">First Name</label>
            </div>
            <div class="">
                <input type="text" class="validate" name="lastName">
                <label for="last_name">Last Name</label>
            </div>
        </div>
        <div class="row">
            <div class="">
                <input type="email" class="validate" name="email">
                <label for="disabled">Email</label>
                <span class="helper-text" data-error="Introduce a valid email" data-success="right"></span>
            </div>
        </div>
        <div class="row">
            <div class="">
                <input type="number" class="validate" name="age" min="1" max="100">
                <label for="email">Age</label>
            </div>
        </div>
        <div class="row">
            <div class="">
                <input type="password" class="validate" name="password">
                <label for="password">Password</label>
            </div>
        </div>
        <input class="" type="submit" value="Register">
    </form>
</div>
<a href="/login" class="login-anchor">Do You have an account? Log in!</a>
