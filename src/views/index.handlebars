<div>
    <div class="welcome">
        <div class="info-section">
            <h3 class="welcome-title">Welcome {{user.firstName}} {{user.lastName}} <span class="user-role">({{user.role}})</span></h3>
            <p class="user-email">{{user.email}}</p>
            {{#if user.age}}
                <p class="user-age">{{user.age}} years old</p>
            {{/if}}
            {{#if user.githubLogin}}
                <p class="github-user-tag">(Registered with Github)</p>
            {{/if}}
        </div>
    </div>
    <h1 class="main-title">Our products</h1>
    <button class="see-cart-button" onclick="seeCart(event)" id={{user.cart}}>See Cart</button>
    <div id="product-list-container">
        {{#each products}}
            <div class="product-item" id={{_id}} >
                <p id="item-title">{{title}}</p>
                <p>{{description}}</p>
                <p class="price-tag">${{price}}</p>
                {{#if files}}
                    <div class="thumbnail-container">
                        <img src="../../public/img/{{files}}" alt="">
                    </div>
                {{else}}
                    <p id="no-image">no image</p>
                {{/if}}
                <p class="stock-tag">{{stock}} restantes</p>
                <div class="item-counter-container">
                    <button class="less-button-counter" onclick="decreaseAmount(event)">-</button>
                    <p class="counter">1</p>
                    <button class="more-button-counter" onclick="increaseAmount(event)">+</button>
                </div>
                <button id="add-to-cart-button" class="waves-effect" onclick="addToCart(event)">Add to cart</button>
            </div>
        {{/each}}
    </div>
</div>
